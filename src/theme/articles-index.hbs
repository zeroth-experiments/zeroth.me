{{> html-head}}

	<div class="container pb-5">
		<div class="row">
			<div class="col-sm-12 blog-main">
				<ul class=" blog-list list-unstyled">
				{{#each index}}
					<li>
						<div class="row">
							<div class="col-sm-10">
								<a href="/{{url}}"><h4 class="blog-post-list-title">{{title}}</h4></a>
								<span class="blog-post-list-tags">
								<small><i class="fa fa-tags" aria-hidden="true"></i></small>
								{{#each tags}}
									<small><a class="badge badge-{{random 7}}" href="/tags/{{this}}">{{this}}</a></small>
								{{/each}}
								</span>
							</div>
							<div class="col-sm-2 blog-post-list-meta pr-2">
								<small ><i class="fa fa-clock-o" aria-hidden="true"></i>
 {{date published_at}}</small>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12 blog-post-list-description">
								{{{description}}}
							</div>
						</div>
					</li>
				{{/each}}
				</ul>
				<nav class="blog-pagination">
                    <a class="btn btn-outline-dark{{#unless paginate.previous}} disabled{{/unless}}" href="{{paginate.previous_page_url}}">Previous</a>
                    <a class="btn btn-outline-dark{{#unless paginate.next}} disabled{{/unless}}" href="{{paginate.next_page_url}}">Next</a>
                </nav>
			</div>
			<!-- /.blog-main -->
		</div>
		<!-- /.row -->

	</div>
	<!-- /.container -->
{{> page-footer}} {{> html-footer}}

